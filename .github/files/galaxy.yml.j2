---
namespace: {{ collection_namespace }}
name: {{ collection_name }}
version: {{ collection_version }}
description: Ansible Collection that will gather various reports/outputs that are commonly asked for in Red Hat Support Cases
readme: README.md
authors:
  - Lenny Shirley @lennysh
  - Diego Mateus @dfelipem
repository: {{ collection_repo }}
issues: {{ collection_repo }}/issues
documentation: {{ collection_repo }}/docs
build_ignore:
  - .github
  - "__pycache__"
  - ".coverage"
  - ".pytest_cache"
  - ".rh_offline_token*"
  - "*.egg-info"
  - "*.log"
  - "*.pyc"
  - "*.tar.gz"
  - "ignore_*"
  - "inventory-*"
  - changelogs/
  - collections/
  - devfile.yaml
  - galaxy.yml.j2
  - pyproject.toml
  - release.yml
  - requirements.txt
  - roles/ignore_*
  - test-requirements.txt
  - test-workflow.txt
  - tests/*
  - tox-ansible.ini
license:
  - GPL-3.0-or-later
tags:
  - ansible
  - automation
  - infrastructure
  - linux
  - mustgather
  - redhat
  - sosreport
  - support
  - tools
dependencies:
  community.general: ">=11.4.0"
